<%= form_with model: @user do |form| %>
  <div class="form-group">
    <%= form.label :username, class:'required' %>
    <%= form.text_field :username, class: "form-control", placeholder: "Enter your username" %>
    <% @user.errors.full_messages_for(:username).each do |message| %>
     <div class="text-danger"> <%= message %></div>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= form.label :email, class:'required' %>
    <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <span class="text-danger">
        <%= message %>
      </span>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= form.label :password, class: 'required' %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
      <span class="text-danger">
        <%= message %>
      </span>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= form.label :college %>
    <%= form.text_field :college, class: "form-control", placeholder: "Enter your college" %>
  </div>
  
  <div class="form-group">
    <%= form.label :department %>
    <%= form.text_field :department, class: "form-control", placeholder: "Enter your department" %>
  </div>
  
  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
