<div class="container">
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Registrations</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "Leader Board", leaderboard_index_path(@user), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Dash Board", root_path, class: "nav-link" %>
          </li>
        </ul>
      
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Profile
            </a>
            <div class="dropdown-menu" aria-labelledby="userDropdown">
              <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
              <a href="logout" class="dropdown-item">Log Out</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <div class="row my-4">
  <div class=" mx-5 mr-5 ">
      <%= form_tag registrations_path, method: :get, class: "form-inline float-right" do %>
        <%= text_field_tag :search, params[:search], class: "form-control mr-sm-2", placeholder: "Search exams..." %>
        <%= submit_tag "Search", class: "btn btn-outline-primary my-2 my-sm-0 mr-5" %>
      <% end %>
    </div>
    <div class="col-md-6 ml-5">
      <%= form_tag registrations_path, method: :get, class: "form-inline" do %>
        <div class="form-group mr-2">
          <%= label_tag "department", "Department:" %>
          <%= select_tag :department, options_from_collection_for_select(@department_options, :id, :department_name, params[:department]), include_blank: "All Departments", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag "subject", "Subject:" %>
          <%= select_tag :subject, options_from_collection_for_select(@subject_options, :id, :subject_name, params[:subject]), include_blank: "All Subjects", class: "form-control" %>
        </div>
        <%= submit_tag "Filter", class: "btn btn-outline-primary ml-2" %>
      <% end %>
    </div>
    
  </div>

  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th><%= link_to "Exam Name", registrations_path(sort: "name", order: params[:sort] == "name" && params[:order] == "asc" ? "desc" : "asc") %></th>
        <th><%= link_to "Start Time", registrations_path(sort: "start_time", order: params[:sort] == "start_time" && params[:order] == "asc" ? "desc" : "asc") %></th>
        <th><%= link_to "Duration", registrations_path(sort: "duration", order: params[:sort] == "duration" && params[:order] == "asc" ? "desc" : "asc") %></th>
        <th>Department</th>
        <th>Subject</th>
        <th>Registration</th>
      </tr>
    </thead>
    <tbody class="table-hover">
      <% @exams.each do |exam| %>
        <tr>
          <td><%= link_to exam.exam_name, exam_path(exam.id) %></td>
          <td><%= exam.start_time %></td>
          <td><%= exam.duration %></td>
          <td><%= exam.subject.department.department_name %></td>
          <td><%= exam.subject.subject_name %></td>
          <td> <% if exam.start_time - 24.hours <= Time.now %>
              <span class="text-danger">Registration ended</span>
            <% else %>
              <%= link_to "Register", new_registration_path(exam_id: exam.id), class: "btn btn-primary" %>
            <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
