<div class="container mt-5 mb-5">
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body">
      <h2 class="card-title"><%= @exam.exam_name %></h2>
      <div class="row">
        <div class="col-md-6">
          <h5 class="card-subtitle mb-2 text-muted">Start Time:</h5>
          <p class="card-text"><%= (@exam.start_time + 5.hours + 30.minutes).strftime('%d/%m/%Y %I:%M %p') %></p>
        </div>
        <div class="col-md-6">
          <h5 class="card-subtitle mb-2 text-muted">Exam Duration:</h5>
          <p class="card-text"><%= @exam.duration %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <h5 class="card-subtitle mb-2 text-muted">Subject:</h5>
          <p class="card-text"><%= @exam.subject.subject_name %></p>
        </div>
        <div class="col-md-6">
          <h5 class="card-subtitle mb-2 text-muted">Register here:</h5>
          <p class="card-text"><%= button_to "Register", exam_registrations_path(exam_id: @exam.id), class: "btn btn-primary btn-lg mr-3" %></p>
        </div>
      </div>
    </div>
  </div>
</div>
