<div class="container">
  <h1 class="mb-4">Subjects</h1>

  <div class="row">
    <% @subjects.each do |subject| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h3 class="card-title"><%= link_to subject.subject_name, subject_path(subject), class: "text-dark" %></h3>
            <!-- Display other subject details -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
