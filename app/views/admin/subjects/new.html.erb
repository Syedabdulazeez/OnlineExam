<!-- app/views/admin/subjects/new.html.erb -->

<div class="container">
  <h1>Create New Subject</h1>

  <%= form_with(model: @subject, url: admin_subjects_path, class: 'form') do |form| %>
    <div class="form-group">
      <%= form.label :subject_name %>
      <%= form.text_field :subject_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :department_id, 'Department' %>
      <%= form.collection_select :department_id, @departments, :id, :department_name, { prompt: 'Select a department' }, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Create Subject', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
