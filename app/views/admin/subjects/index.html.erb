<!-- app/views/admin/subjects/index.html.erb -->

<h1>Manage Subjects</h1>
<% if notice %>
  <div class="notice">
    <%= notice %>
  </div>
<% end %>

<p><%= link_to 'Create New Subject', new_admin_subject_path, class: 'btn btn-primary' %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.id %></td>
        <td><%= subject.subject_name %></td>
        <td>
          <%= link_to 'Edit', edit_admin_subject_path(subject), class: 'btn btn-secondary' %>
          <%= link_to 'Delete', admin_subject_path(subject), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
