<%= form_with(model: subject, url: url, method: method, class: 'form') do |form| %>
  <div class="form-group">
    <%= form.label :subject_name %>
    <%= form.text_field :subject_name, class: 'form-control' %>
    <% if form.object.errors.has_key?(:subject_name) %>
      <span class="error">
        <%= form.object.errors[:subject_name].first %>
      </span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :department_id, 'Department' %>
    <%= form.collection_select :department_id, departments, :id, :department_name, prompt: 'Select a department', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit submit_button_text, class: 'btn btn-primary' %>
  </div>
<% end %>
