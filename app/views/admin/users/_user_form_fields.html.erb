<!-- _user_form_fields.html.erb -->
<div class="form-group">
  <%= form.label :username %>
  <%= form.text_field :username, class: "form-control", placeholder: "Enter your username" %>
  <% if @user.errors[:username].any? %>
    <div class="color-danger"><%= @user.errors[:username].first %></div>
  <% end %>
</div>

<div class="form-group">
  <%= form.label :email %>
  <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
  <% if @user.errors[:email].any? %>
    <div class="color-danger"><%= @user.errors[:email].first %></div>
  <% end %>
</div>

<div class="form-group">
  <%= form.label :password %>
  <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
  <% if @user.errors[:password].any? %>
    <div class="color-danger"><%= @user.errors[:password].first %></div>
  <% end %>
</div>
