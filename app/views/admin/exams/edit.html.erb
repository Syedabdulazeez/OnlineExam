<!-- app/views/admin/exams/edit.html.erb -->

<h1>Edit Exam</h1>

<%= form_with(model: @exam, url: admin_exam_path(@exam), method: :patch, class: 'form') do |form| %>
  <div class="form-group">
    <%= form.label :exam_name %>
    <%= form.text_field :exam_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :subject_id, 'Subject' %>
    <%= form.collection_select :subject_id, @subjects, :id, :subject_name, { prompt: 'Select a subject' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :start_time %>
    <%= form.datetime_local_field :start_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :duration %>
    <%= form.number_field :duration, class: 'form-control' %>
  </div>

  <!-- Add more fields as needed -->

  <div class="actions">
    <%= form.submit 'Update Exam', class: 'btn btn-primary' %>
  </div>
<% end %>
