<%= form_with(model: @exam, url: url, class: 'form', method: method) do |form| %>
  <div class="form-group">
    <%= form.label :exam_name, class: 'required' %>
    <%= form.text_field :exam_name, class: 'form-control ' %>
    <% if form.object.errors.has_key?(:exam_name) %>
      <span class="error text-danger">
        <%= form.object.errors[:exam_name].first %>
      </span>
    <% end %>
  </div>

  <div class="form-group ">
    <%= form.label :subject_id, 'Subject', class:'required' %>
    <%= form.collection_select :subject_id, @subjects, :id, :subject_name, prompt: 'Select a subject', class: 'form-control' %>
    <% if form.object.errors.has_key?(:subject_id) %>
      <span class="error text-danger">
        <%= form.object.errors[:subject_id].first %>
      </span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :start_time, 'Exam Date and Time', class:'required' %>
    <%= form.datetime_local_field :start_time, class: 'form-control' %>
    <% if form.object.errors.has_key?(:start_time) %>
      <span class="error text-danger" >
        <%= form.object.errors[:start_time].first %>
      </span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :duration, class:'required' %>
    <%= form.number_field :duration, class: 'form-control' %>
    <% if form.object.errors.has_key?(:duration) %>
      <span class="error text-danger">
        <%= form.object.errors[:duration].first %>
      </span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :is_demo, 'Exam Type' %>
    <%= form.select :is_demo, options_for_select([['Demo Exam', true], ['Actual Exam', false]], @exam.is_demo?), {}, class: 'form-control' %>
    <% if form.object.errors.has_key?(:is_demo) %>
      <span class="error text-danger">
        <%= form.object.errors[:is_demo].first %>
      </span>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit submit_button_text, class: 'btn btn-primary' %>
    <%= link_to 'Cancel', admin_exams_path, class: 'btn btn-secondary'%>
  </div>
<% end %>
