<div class="form-group">
  <%= f.label :department_name, class:'required' %>
  <%= f.text_field :department_name, class: 'form-control' %>
  <% if @department.errors.has_key?(:department_name) %>
    <span class="error text-danger">
      <%= @department.errors[:department_name].first %>
    </span>
  <% end %>
</div>
<%= f.submit class: 'btn btn-primary' %>
<%= link_to 'Cancel', admin_departments_path, class: 'btn btn-secondary' %>

