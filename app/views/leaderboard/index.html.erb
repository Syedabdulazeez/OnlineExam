<!-- app/views/leaderboard/index.html.erb -->

<h1>Leaderboard</h1>

<div class="row">
  <div class="col-md-6">
    <h2>Individual Performance</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Rank</th>
          <th>User</th>
          <th>Subject</th>
          <th>Total Marks</th>
        </tr>
      </thead>
      <tbody>
        <% @individual_performance.each_with_index do |performance, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= performance.user.username %></td>
            <td><%= performance.subject.subject_name %></td>
            <td><%= performance.total_marks %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-6">
    <h2>Average Performance</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Rank</th>
          <th>Subject</th>
          <th>Average Marks</th>
        </tr>
      </thead>
      <tbody>
        <% @average_performance.each_with_index do |performance, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= performance.subject.subject_name %></td>
            <td><%= performance.average_marks %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h2>Highest Performance</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Rank</th>
          <th>Subject</th>
          <th>Highest Marks</th>
        </tr>
      </thead>
      <tbody>
        <% @highest_performance.each_with_index do |performance, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= performance.subject.subject_name %></td>
            <td><%= performance.highest_marks %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

